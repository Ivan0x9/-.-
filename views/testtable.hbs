                    <td id="rowLink"><button type="button" class="btn btn-primary link-button" ng-show="open"><span class="glyphicon glyphicon-link"></span></button></td>
                </tr>

                <tr ng-controller="hoverLink" ng-mouseover="open=true" ng-mouseleave="open=false">
